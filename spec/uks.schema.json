{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://openclaw.ai/schemas/uks-bento.json",
  "title": "UKS Bento Box",
  "description": "A standardized unit of knowledge for the Unified Knowledge System (UKS).",
  "type": "object",
  "required": [
    "dish",
    "flavor",
    "nutrition",
    "ingredients"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^urn:uks:[a-z0-9-]+:[a-z0-9-]+:[a-z0-9-]+$",
      "description": "Unique Resource Name (URN). Format: urn:uks:<namespace>:<flavor>:<id>"
    },
    "dish": {
      "type": "string",
      "description": "The name of the Dish (Knowledge Entity). Previously 'title'."
    },
    "flavor": {
      "type": "string",
      "description": "The type/category (e.g., 'Concept', 'Tool').",
      "enum": [
        "Concept",
        "Tool",
        "Protocol",
        "Person",
        "Event",
        "Location",
        "Code"
      ]
    },
    "nutrition": {
      "type": "object",
      "description": "Core data payload (observations, specs, facts).",
      "properties": {
        "observations": {
          "type": "array",
          "items": { "type": "string" }
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "complexity": {
          "type": "string",
          "enum": ["Low", "Medium", "High"]
        }
      },
      "additionalProperties": true
    },
    "ingredients": {
      "type": "array",
      "description": "Dependencies or related entities.",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "relation": { "type": "string" }
        },
        "required": ["name"]
      }
    }
  }
}
